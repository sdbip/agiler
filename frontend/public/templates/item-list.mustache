{{#items}}
<div id="item-{{id}}" class="item item-{{type}} no-select {{#isNew}} hidden {{/isNew}}">
  {{#canPromote}}
  <span class="promote-button" onclick="emitUIEvent('promote-clicked', {element: this, event, itemId: '{{id}}'})">âœµ</span>
  {{/canPromote}}
  {{#canComplete}}
  <label onclick="emitUIEvent('complete-clicked', {element: this, event, itemId: '{{id}}'})"></label>
  {{/canComplete}}
  <span>{{title}}</span>
  {{#hasChildren}}
  <div class="chevron">+</div>
  <div class="disclosure-button" onclick="emitUIEvent('disclosure-button-clicked', {element: this, event, itemId: '{{id}}'})"></div>
  <img class="spinner inactive" src="public/images/spinner.gif">
  <div class="collapsible" style="height: 0">
    <div class="flex">
      <input type="text" class="item-title"
        onfocus="emitUIEvent('focus', {element: this, event, itemId: '{{id}}'})"
        oninput="emitUIEvent('input', {element: this, event, itemId: '{{id}}'})"
        onblur="emitUIEvent('blur', {element: this, event, itemId: '{{id}}'})"
        onkeydown="emitUIEvent('title-keydown', {element: this, event, itemId: '{{id}}'})" placeholder="What needs to be done?">
      <button class="add-button" onclick="emitUIEvent('add-button-clicked', {element: this, event, itemId: '{{id}}'})">+</button>
    </div>
    <div class="item-list"></div>
  </div>
  {{/hasChildren}}
</div>
{{/items}}
